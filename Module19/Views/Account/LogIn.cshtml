@using Module19.Authorization

@model LogInUser;
@using Module19.Controllers;
@{
    ViewBag.Title = "Вход в аккаунт";
}


<div class="container" >
    <div class="reset">
        <div class="reset" style="margin:0 35% 0 35% ; min-width:15rem">
            <h3 class="text-center">Вход</h3>

            <form class="form" asp-action="Login" asp-controller="Account" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input hidden="hidden" value=@Model.ReturnUrl asp-for="ReturnUrl"/>

                <div class="col-xs-12 mb2">
                    <div class="form-group  mb2" style="margin-bottom:20px">
                        <input asp-for="LoginProp" class="form-control" placeholder="Логин" />
                    </div>
                </div>

                <div class="col-xs-12 mb2" >
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Пароль" />
                    </div>
                </div>

                <div class="text-center col-xs-12">
                    <button type="submit" class="btn btn-default">Войти</button>
                </div>
            </form>

            
        </div>
    </div>
</div>