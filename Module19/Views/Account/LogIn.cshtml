<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Вход</h3>

            <form class="form" asp-action="Login" asp-controller="Account" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @* <input asp-for="ReturnUrl"  /> *@

                <input value=@Model.ReturnUrl asp-for="ReturnUrl"/>

                <div class="col-xs-12 mb2">
                    <div class="form-group ">
                        <input asp-for="LoginProp" class="form-control" placeholder="Логин" />
                    </div>
                </div>

                <div class="col-xs-12 mb2" >
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Пароль" />
                    </div>
                </div>

                <div class="text-center col-xs-12">
                    <button type="submit" class="btn btn-default">Войти</button>
                </div>
            </form>

